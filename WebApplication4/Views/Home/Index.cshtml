@model WebApplication4.Models.MeetingViewModel

@{
    ViewData["Title"] = "New Meeting";
    ViewBag.Title = "AddMeeting";
}

<div class="jumbotron">
    <h2>New Meeting</h2>
</div>

@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{
    <div class="form-group">
        <label class="control-label col-md-2">Description</label>
        <div class="col-md-6">
            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Meeting Time</label>
        <div class="col-md-6">
            @Html.EditorFor(model => model.MeetingTime)
            @Html.ValidationMessageFor(model => model.MeetingTime, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Room</label>
        <div class="col-md-6">
            @Html.DropDownListFor(model => model.RoomId, new SelectList(ViewBag.Rooms, "RoomId", "Description"), new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-6">
            <input type="submit" value="Submit" class="btn btn-default" />
        </div>
    </div>
}

